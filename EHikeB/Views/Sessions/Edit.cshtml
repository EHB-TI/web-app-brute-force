@model EHikeB.Models.Session

@{
    ViewData["Title"] = "Edit";
}


<div class="container py-5">
    <h4 class="text-center text-secondary">Edit Car</h4>
    <div class="row gx-5 justify-content-center ml-0 mr-0">
        <div class="col-lg-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SessionID" />

                <div class="form-group mb-3">
                    <label asp-for="StartTime" class="control-label"></label>
                    <input asp-for="StartTime" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DeviationTime" class="control-label"></label>
                    <input asp-for="DeviationTime" class="form-control" />
                    <span asp-validation-for="DeviationTime" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control">
                        <option selected="selected" value="">Verander status</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    
                </div>
                <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-secondary" />

                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
