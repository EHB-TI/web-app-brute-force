@model IEnumerable<EHikeB.Models.Address>

@{
    ViewData["Title"] = "Index";
}
<div class="container py-5">


    <h1 class="text-center text-secondary">My addresses</h1>

    <p>
        <a asp-action="Create" class="btn btn-secondary">Add a new address</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>