@{
}
@model IEnumerable<Session>



<div class="container py-5">

    <h4 class="text-center text-secondary mb-3">Search</h4>
    <div class="card mb-3">
        <h5 class="card-header">Search</h5>
        <div class="card-body">
            @using (Html.BeginForm("Index", "Search", FormMethod.Get))
            {
                <div class="form-row align-items-center">
                    <div class="col-sm-6 my-1">
                        @Html.TextBox("zipCode")<input type="submit" value="zipCode" class="form-control" id="zipCode">
                    </div>
                </div>
            }
        </div>
    </div>
    @if (Model != null)
    {


        @if (Model.Count() == 0)
        {
            <div class="card mb-3">
                <h5 class="card-header">Featured</h5>
                <div class="card-body">
                    <h5 class="card-title">No match any sessions.</h5>
                </div>
            </div>
        }
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <div class="card mb-3">
                    <h5 class="card-header">Featured</h5>
                    <div class="card-body">
                        <h5 class="card-title">@item.Car.Model</h5>
                        <p class="card-text">From @item.Address.City to EHB</p>
                        <p class="card-text">On @item.StartTime</p>
                        <a href="#" class="btn btn-secondary">Visit details page</a>
                        @if (item.Available)
                        {
                            @using (Html.BeginForm("Join", "Search", FormMethod.Post))
                                {
                                <input type="hidden" name="Join" value="@item.SessionID">
                                <input type="submit" value="Join" class="form-control">

                            }
                        }
                        @if (!item.Available)
                        {
                            <p>Already full</p>
                        }

                    </div>
                </div>
            }
        }
    }


</div>