@model IEnumerable<EHikeB.Models.Car>

@{
    ViewData["Title"] = "Index";
}
<div class="container py-5">


    <h1 class="text-center text-secondary">My cars</h1>

    <p>
        <a asp-action="Create" class="btn btn-secondary">Add a new car</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Seats)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Energy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Plate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seats)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Energy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plate)
                    </td>
                    <td>
                        <a class="link-dark" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a class="link-dark" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a class="link-dark" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>